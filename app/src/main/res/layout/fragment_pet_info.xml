    <ImageButton
        android:id="@+id/foodLogButton"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/food_log_icon_v2"
        app:layout_constraintBottom_toBottomOf="parent"
